<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
		<RadioGroup 
		    android:id="@+id/setting_choice"
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:layout_alignParentRight="true"
		    android:orientation="horizontal"
		    >
		    
		    <RadioButton
		        android:id="@+id/option_allow"
		        android:layout_width="32dp"
		        android:layout_height="32dp"	        
		        style="@style/SettingOptionAllow"
		        />
			<!--  I'd really like to be able to include
			android:text="@string/setting_option_allow" 
			and then hide the text but I haven't worked out how yet -->
		    
			<RadioButton
			    android:id="@+id/option_yes"
			    android:layout_width="32dp"
			    android:layout_height="32dp"
			    style="@style/SettingOptionAllow"
			    />
		    
		    <RadioButton
			    android:id="@+id/option_random"
			    android:layout_width="32dp"
			    android:layout_height="32dp"
			    style="@style/SettingOptionRandom"
			    />
			<!--  I'd really like to be able to include
			android:text="@string/setting_option_random" 
			and then hide the text but I haven't worked out how yet -->
			
			<RadioButton
			    android:id="@+id/option_custom"
			    android:layout_width="32dp"
			    android:layout_height="32dp"
			    style="@style/SettingOptionCustom"
			    />
			<!--  I'd really like to be able to include
			android:text="@string/setting_option_custom" 
			and then hide the text but I haven't worked out how yet -->
		    
			<RadioButton
			    android:id="@+id/option_customlocation"
			    android:layout_width="32dp"
			    android:layout_height="32dp"
			    style="@style/SettingOptionCustom"
			    />
		    
		    <RadioButton
			    android:id="@+id/option_deny"
			    android:layout_width="32dp"
			    android:layout_height="32dp"
			    style="@style/SettingOptionDeny"
			    />
			<!--  I'd really like to be able to include
			android:text="@string/setting_option_deny" 
			and then hide the text but I haven't worked out how yet -->

			<RadioButton
			    android:id="@+id/option_no"
			    android:layout_width="32dp"
			    android:layout_height="32dp"
			    style="@style/SettingOptionNo"
			    />

		</RadioGroup>
		
		<ImageButton 
	        android:id="@+id/help_button"
	        android:layout_width="32dp"
	        android:layout_height="32dp"
	        android:padding="0dp"
	        android:gravity="center_vertical"
			android:src="@drawable/button_help"
			android:contentDescription="@string/button_help_text"
			android:layout_alignParentLeft="true"
	        />
		<RelativeLayout
		    android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:gravity="center_vertical"
	        android:layout_marginLeft="4dp"
			android:layout_toRightOf="@+id/help_button" >
		    <TextView
		        android:id="@+id/option_title"
		        android:layout_width="wrap_content"
		        android:layout_height="fill_parent"
		        android:textSize="16sp"
		         />
			<TextView
		        android:id="@+id/option_custom_value_pretext"
		        android:layout_width="wrap_content"
		        android:layout_height="fill_parent"
		        android:layout_below="@+id/option_title"
		        android:textSize="12sp"
		        android:text="@string/detail_customvalue_pretext"
		        android:visibility="gone"
		         />
		    <TextView
		        android:id="@+id/option_custom_value"
		        android:layout_width="wrap_content"
		        android:layout_height="fill_parent"
		        android:layout_below="@+id/option_title"
		        android:layout_toRightOf="@+id/option_custom_value_pretext"
		        android:textSize="12sp"
		        android:visibility="gone"
		         />
	    </RelativeLayout>
</RelativeLayout>