<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/option_mainlayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="40dp"
    android:orientation="horizontal" >
		<ImageButton 
	        android:id="@+id/help_button"
	        android:layout_width="40dp"
	        android:layout_height="40dp"
	        android:padding="0dp"
	        android:gravity="center_vertical"
			android:src="@drawable/button_help"
			android:contentDescription="@string/button_help_text"
	        />
		<RelativeLayout
		    android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:layout_marginLeft="4dp"
	        android:layout_weight="1" >
		    <TextView
		        android:id="@+id/option_title"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="16sp"
		         />
			<TextView
		        android:id="@+id/option_custom_value_pretext"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/option_title"
		        android:textSize="12sp"
		        android:text="@string/detail_customvalue_pretext"
		        android:visibility="gone"
		         />
		    <TextView
		        android:id="@+id/option_custom_value"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/option_title"
		        android:layout_toRightOf="@+id/option_custom_value_pretext"
		        android:textSize="12sp"
		        android:visibility="gone"
		         />
	    </RelativeLayout>
	    
		<RadioGroup 
		    android:id="@+id/setting_choice"
		    android:layout_width="0dip"
		    android:layout_height="match_parent"
		    android:orientation="horizontal"
		    android:layout_weight="1"
		    android:gravity="right|center_vertical"
		    >

			<RadioButton
		        android:id="@+id/option_nochange"
		        style="@style/SettingOptionNoChange"
		        android:layout_width="40dp"
		        android:layout_height="40dp"
		        android:contentDescription="@string/detail_setting_option_nochange_contentdescription"
		        android:visibility="gone" />
		    
		    <RadioButton
		        android:id="@+id/option_allow"
		        style="@style/SettingOptionAllow"
		        android:layout_width="40dp"
		        android:layout_height="40dp"
		        android:contentDescription="@string/detail_setting_option_allow_contentdescription" />
		    
		
		    <RadioButton
		        android:id="@+id/option_yes"
		        style="@style/SettingOptionAllow"
		        android:layout_width="40dp"
		        android:layout_height="40dp"
		        android:contentDescription="@string/detail_setting_option_yes_contentdescription" />
		
		    <RadioButton
		        android:id="@+id/option_random"
		        style="@style/SettingOptionRandom"
		        android:layout_width="40dp"
		        android:layout_height="40dp"
		        android:contentDescription="@string/detail_setting_option_random_contentdescription" />
		
		    <RadioButton
		        android:id="@+id/option_custom"
		        style="@style/SettingOptionCustom"
		        android:layout_width="40dp"
		        android:layout_height="40dp"
				android:contentDescription="@string/detail_setting_option_custom_contentdescription" />
		
		    <RadioButton
		        android:id="@+id/option_customlocation"
		        style="@style/SettingOptionCustom"
		        android:layout_width="40dp"
		        android:layout_height="40dp"
		        android:contentDescription="@string/detail_setting_option_custom_contentdescription" />
		
		    <RadioButton
		        android:id="@+id/option_deny"
		        style="@style/SettingOptionDeny"
		        android:layout_width="40dp"
		        android:layout_height="40dp"
		        android:contentDescription="@string/detail_setting_option_deny_contentdescription" />
		
		    <RadioButton
		        android:id="@+id/option_no"
		        style="@style/SettingOptionNo"
		        android:layout_width="40dp"
		        android:layout_height="40dp"
		        android:contentDescription="@string/detail_setting_option_no_contentdescription" />
		</RadioGroup>
</LinearLayout>